#include<conio.h>
int main()
{
	int n;
	printf("\t\t\t\t\tSCHEDUlER\n");
	printf("\nEnter number of process:- \n");
	scanf("%d",&n);
	int at[n],bt[n],temp,wt[n],sum=0,p[n],st=0,st1=0,i,j,sm,sm2,sm3;
	float avg;
	for(i=0;i<n;i++)
	{
		printf("\nEnter arrival of Process %d:",i+1);
		scanf("%d",&at[i]);
		printf("\n Enter burst time of Process %d:",i+1);
		scanf("%d",&bt[i]);
		p[i]=i+1;
		st+=bt[i];
	}
            for(i=0;i<n;i++)
            {
                for(j=0;j<n-i-1;j++)
                {
                    if(bt[j]>bt[j+1])
                    {
                        sm=at[j+1];
                        at[j+1]=at[j];
                        at[j]=sm;
                        sm2=bt[j+1];
                        bt[j+1]=bt[j];
                        bt[j]=sm2;
                        sm3=p[j+1];
                        p[j+1]=p[j];
                        p[j]=sm3;
                    }
                }
            }
            
            wt[0]=0;
            for(i=1;i<n;i++)
            {
            	wt[i]=wt[i-1]+bt[i-1]+2;
            	sum+=wt[i];
			}
			avg=(float)sum/n;
			for(i=0;i<n;i++)
			{
				printf("\nWaiting time for process %d is:%d  \n",p[i],wt[i]);
					}		
					printf("\nAverage waiting time is:%f \n",avg);
					st1+=sum+st;
					printf("\nTurnaround time is:%d \n",st1);
					
		
}
